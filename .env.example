# Required
ANTHROPIC_API_KEY=your-anthropic-api-key

# Web Search (required for NewsDigestAgent and real search in ResearchAgent)
BRAVE_API_KEY=your-brave-search-api-key

# Email (optional, for sending news digests via email)
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=digest@yourdomain.com
EMAIL_TO=you@example.com

# Resy API (required for ReservationAgent API mode)
RESY_API_KEY=your-resy-api-key
RESY_AUTH_TOKEN=your-resy-auth-token
RESY_PAYMENT_METHOD_ID=your-payment-method-id

# Resy Browser Automation (alternative to API)
RESY_EMAIL=your-resy-email
RESY_PASSWORD=your-resy-password
RESY_CLIENT_MODE=auto  # auto, api, browser
RESY_BROWSER_HEADLESS=true

# Resy Dynamic Configuration
RESY_DEFAULT_LOCATION=ny
RESY_RATE_LIMIT_MIN_SECONDS=6
RESY_RATE_LIMIT_JITTER_MIN=1.0
RESY_RATE_LIMIT_JITTER_MAX=2.5
RESY_BROWSER_TIMEOUT_MS=30000

# Reservation Settings
DEFAULT_PARTY_SIZE=2
RESERVATION_DB_PATH=data/reservations.db
